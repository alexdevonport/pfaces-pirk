    float dr = growth_bound_matrix(i,j,input)*tmp2[j] + input[i] / 3;
    k2[i] += dr;
    tmp[i] += RK4_H / 2.0*dr;
    //final_state[i] += (RK4_H/6.0)*2.0*dr;
    if(j==1) {
        tmp[i] -= RK4_H/2.0 * k0[i];  
    }
    /* after this kfun: */
    /* tmp[i] = final_state[i] + RK4_H/2*k2[i] */
